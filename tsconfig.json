{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowUnreachableCode": true,
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "node_modules/@types/**/*.ts"
    ]
}
